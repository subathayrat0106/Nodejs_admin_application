 <% include ./partials/header %> 
<form action="/home" method="POST">
   <div><h2>Student Info</h2></div>
  <div class="form-row">
    <div class="col-md-4 mb-3">
      <label for="EnterFirstName">First Name</label>
      <input type="text" class="form-control" id="firstName" name="firstName" placeholder="First name" required>
    </div>
    <div class="col-md-4 mb-3">
      <label for="EnterLastName">Last name</label>
      <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Last name" required>
    </div>
    <div class="col-md-4 mb-3">
      <label for="EnterDOB">Date of Birth</label>
      <input type="date" class="form-control" id="dob" name="dob" placeholder="MM/DD/YYYY"  required>
    </div>
  </div>
  <div><h2>Student Fee</h2></div>
   <div class="form-row">
     <div class="col-md-4 mb-3">
      <label for="EnterTuition">Tuition</label>
      <input type="number" class="form-control" id="tuition" name="tuition" placeholder="">
    </div>
     <div class="col-md-4 mb-3">
      <label for="EnterCredit">Number Of Credit</label>
      <input type="number" class="form-control" step="0.01" id="credit" name="credit" placeholder="">
    </div>
     <div class="col-md-4 mb-3">
      <label for="SelectEntryTime">Student Entry Time</label>
      <select class="form-control" id="studentEntryTime" name="studentEntryTime">
       <option value="Winter 2017 Semester" >Winter   2017 Semester</option>
       <option value="Summer 2017 Semester" >Summer   2017 Semester</option>
       <option value="Fall   2017 Semester" >Fall     2017 Semester</option>
       <option value="Winter 2018 Semester" >Winter   2018 Semester</option>
       <option value="Summer 2018 Semester" >Summer   2018 Semester</option>
       <option value="Fall   2018 Semester" >Fall     2018 Semester</option>
       <option value="Winter 2019 Semester" >Winter   2019 Semester</option>
       <option value="Summer 2019 Semester" >Summer   2019 Semester</option>
       <option value="Fall   2019 Semester" >Fall     2019 Semester</option>
     </select>
    </div>
   </div>
   <div class="form-row">
     <div class="col-md-4 mb-3">
      <label for="EnterAfterSchoolProgram">After School Program</label>
      <input type="text" class="form-control" id="program" name="afterSchoolProgram" placeholder="">
    </div>
     <div class="col-md-3 mb-3">
      <label for="EnterAfterSchoolProgramFee">After School Fee</label>
      <input type="number" class="form-control" id="afterSchoolFee" name="afterSchoolFee" placeholder="">
    </div>
   </div>
   <div class="form-row">
     <div class="col-md-4 mb-3">
      <label for="EnterInsuranceFee">Insurance Fee</label>
      <input type="text" class="form-control" id="InsuranceFee" name="insuranceFee" placeholder="">
    </div>
     <div class="col-md-3 mb-3">
      <label for="EnterLunchFee">Lunch Fee</label>
      <input type="number" class="form-control" id="lunchFee" name="lunchFee" placeholder="">
    </div>
   </div>
   <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Add Student</button>
    </div>
  </form>

 
 <% include ./partials/footer %>