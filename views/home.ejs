 <% include ./partials/header %> 
<div class="jumbotron">
  <h1 class="display-6">Hello, Welcome To Yorkland High School Admin App</h1>
  <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.</p>
  <hr class="my-4">
  <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
  <p class="lead">
    <a class="btn btn-primary btn-lg" href="/home/new" role="button">Add Student</a>
  </p>
  	<div class="row justify-content-center">
                        <div class="col-12 col-md-10 col-lg-8">
                            <form class="card card-sm" action="/home" method="GET" id="serachForm">
                                <div class="card-body row no-gutters align-items-center">
                                    <div class="col-auto">
                                        <i class="fas fa-search h4 text-body"></i>
                                    </div>
                                    <div class="col">
                                        <input class="form-control form-control-lg form-control-borderless" type="search" placeholder="Search Student..." name="search">
                                    </div>
                                    <div class="col-auto">
                                        <button class="btn btn-lg btn-info" type="submit">Search</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
</div>
<% if(noMatch!=null){ %>
<div class="alert alert-danger" role="alert">
  <%=noMatch%>
</div>
<% } %>
  <h2>Result Table</h2>
  <p>The table shows the result of the student list with tabs</p>            
      <section id="tabs" class="project-tab">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <nav>
                            <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
                                <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Tuition</a>
                                <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">After School</a>
                                <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Other</a>
                            </div>
                        </nav>
                        <div class="tab-content" id="nav-tabContent">
                            <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                                <table class="table" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>First Name</th>
                                            <th>Last Name</th>
                                            <th>Date Of Birth</th>
                                            <th>Tuition</th>
                                            <th>Number Of Credit</th>
                                        </tr>
                                    </thead>
                                    <% students.forEach(function(student) { %>
                                      <tbody>
                                          <tr>
                                            <td><a href="/home/<%=student._id%>"><%= student.firstName %></a></td>
                                            <td><%= student.lastName %></td>
                                            <td><%= student.dob %></td>
                                            <td>$ <%= student.finance.tuition %></td>
                                            <td><%= student.finance.credit %></td>
                                            <td><a href="/home/<%=student._id%>/fee/update" class="btn btn-info btn-sm">
                                                    <span class="glyphicon glyphicon-print"></span> Add Balance 
                                                </a>
                                            </td>
                                           </tr>
                                      </tbody>
                                        <% }); %>
                                </table>
                            </div>
                            <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                                <table class="table" cellspacing="0">
                                    <thead>
                                        <tr>
                                           <th>First Name</th>
                                            <th>Last Name</th>
                                            <th>Student Entry Time</th>
                                            <th>After School Program</th>
                                            <th>After School Fee</th>
                                        </tr>
                                    </thead>
                                    <% students.forEach(function(student) { %>
                                      <tbody>
                                          <tr>
                                            <td><a href="/home/<%=student._id%>"><%= student.firstName %></a></td>
                                            <td><%= student.lastName %></td>
                                            <td><%= student.studentEntryTime %></td>
                                             <td><%= student.finance.afterSchoolProgram %></td>
                                             <td>$ <%= student.finance.afterSchoolFee %></td>
                                           </tr>
                                      </tbody>
                                        <% }); %>
                                </table>
                            </div>
                            <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
                                <table class="table" cellspacing="0">
                                    <thead>
                                        <tr>
                                           <th>First Name</th>
                                            <th>Last Name</th>
                                            <th>Date Of Birth</th>
                                            <th>Insurance Fee</th>
                                            <th>Lunch Fee</th>
                                        </tr>
                                    </thead>
                                     <% students.forEach(function(student) { %>
                                      <tbody>
                                          <tr>
                                            <td><a href="/home/<%=student._id%>"><%= student.firstName %></a></td>
                                            <td><%= student.lastName %></td>
                                            <td><%= student.dob %></td>
                                            <td>$ <%= student.finance.insuranceFee %></td>
                                            <td>$ <%= student.finance.lunchFee %></td>
                                           </tr>
                                      </tbody>
                                        <% }); %>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
<% include ./partials/footer %>